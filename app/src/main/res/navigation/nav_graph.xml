<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/home">

    <fragment
        android:id="@+id/home"
        android:name="com.example.android.trivia.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_question1Fragment"
            app:destination="@id/question1" />
    </fragment>
    <fragment
        android:id="@+id/question1"
        android:name="com.example.android.trivia.Question1Fragment"
        android:label="fragment_question1"
        tools:layout="@layout/fragment_question1" >
        <action
            android:id="@+id/action_question1Fragment_to_question2"
            app:destination="@id/question2" />
    </fragment>
    <fragment
        android:id="@+id/question2"
        android:name="com.example.android.trivia.Question2"
        android:label="fragment_question2"
        tools:layout="@layout/fragment_question2" >
        <action
            android:id="@+id/action_question2_to_question3"
            app:destination="@id/question3" />
    </fragment>
    <fragment
        android:id="@+id/question3"
        android:name="com.example.android.trivia.Question3"
        android:label="fragment_question3"
        tools:layout="@layout/fragment_question3" >
        <action
            android:id="@+id/action_question3_to_question4"
            app:destination="@id/question4" />
    </fragment>
    <fragment
        android:id="@+id/question4"
        android:name="com.example.android.trivia.Question4"
        android:label="fragment_question4"
        tools:layout="@layout/fragment_question4" >
        <action
            android:id="@+id/action_question4_to_question5"
            app:destination="@id/question5" />
    </fragment>
    <fragment
        android:id="@+id/question5"
        android:name="com.example.android.trivia.Question5"
        android:label="fragment_question5"
        tools:layout="@layout/fragment_question5" >
        <action
            android:id="@+id/action_question5_to_result"
            app:destination="@id/result" />
    </fragment>
    <fragment
        android:id="@+id/result"
        android:name="com.example.android.trivia.Result"
        android:label="fragment_result"
        tools:layout="@layout/fragment_result" />
</navigation>